{% extends 'base.html.twig' %}

{% block content %}
    <!-- Start Slider -->
    {% include 'home/sections/start-slider.html.twig' %}
    <!-- End Slider -->

    <!-- Start Categories  -->
    <div class="categories-shop">
        <div class="container">
            <div class="row">
                {% for category in categories %}
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <div class="shop-cat-box">
                            <img class="img-fluid" src="data:image/jpeg;base64,{{ category.base64Image }}" alt=""/>
                            <a class="btn hvr-hover" href="/shop/{{ category.category }}">{{ category.category }}</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- End Categories -->
    <div class="box-add-products">
        <div class="container">
          <div class="row">
            {% for  advertise in  advertises  %}
              <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="offer-box-products">
                  <img class="img-fluid" src="data:image/jpeg;base64,{{advertise.base64Image}}" alt="">
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
    </div>

    <!-- Start Products  -->
    <div class="products-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="title-all text-center">
                        <h1>Fruits & Vegetables</h1>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed sit amet lacus enim.</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="special-menu text-center">
                        <div class="button-group filter-button-group">
                            <button class="active" data-filter="*">All</button>
                            <button data-filter=".popular">Popular</button>
                            <button data-filter=".best-seller">Best seller</button>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row special-list">
            {% for  pro  in  pros  %}
      <div class="col-lg-3 col-md-6 special-grid {{pro.type}} ">
                    <div class="products-single fix">
                        <div class="box-img-hover">
                            <div class="type-lb">
                                <p class="sale">Sale</p>
                            </div>
                            <img src="data:image/jpeg;base64,{{pro.base64Image}}" class="img-fluid" alt="Image">
                            <div class="mask-icon">
                                <ul>
                                    <li><a href="#" data-toggle="tooltip" data-placement="right" title="View"><i
                                                    class="fas fa-eye"></i></a></li>
                                    <li><a href="#" data-toggle="tooltip" data-placement="right" title="Compare"><i
                                                    class="fas fa-sync-alt"></i></a></li>
                                    <li><a href="#" data-toggle="tooltip" data-placement="right"
                                           title="Add to Wishlist"><i class="far fa-heart"></i></a></li>
                                </ul>
                                <a class="cart" href="#">Add to Cart</a>
                            </div>
                        </div>
                        <div class="why-text">
                            <h4>{{pro.name}}</h4>
                            <h5>${{pro.price}}</h5>
                        </div>
                    </div>
                </div>
            {% endfor %}



            </div>
        </div>
    </div>
    <!-- End Products  -->

